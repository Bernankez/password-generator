{
  "compilerOptions": {
    "strict": true,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "lib": ["ESNext", "DOM"],
    "useDefineForClassFields": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "types": [
      "vite/client",
      "@testing-library/jest-dom"
    ],
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    },
    "noEmit": true,
    "isolatedModules": true
  },
  "include": ["src/**/*"],
  "references": [{
    "path": "./tsconfig.node.json"
  }]
}
